global:
  resolve_timeout: 1m
route:
  receiver: "pager-duty"
  routes:
    - receiver: "default-telegram"
    - receiver: "mail"
    
receivers:
  - name: "default-telegram"
    telegram_configs:
      - bot_token: "{ notifications_telegram_token }"
        api_url: https://api.telegram.org
        chat_id: "{ notifications_telegram_chat_id }"
        disable_notifications: false
        send_resolved: false
        parse_mode: ""
  - name: "mail"
    email_configs:
      - to: "{ receiving_email }"
        from: "{ notifications_email }"
        smarthost: "pro1.mail.ovh.net:465"
        auth_username: "{ notifications_email }"
        auth_identity: "{ notifications_email }"
        auth_password: "{ notifications_email_password }"
        send_resolved: true
  - name: "pager-duty"
    pagerduty_configs:
      - send_resolved: true
        service_key: "{ pager_duty_integration_key }"
