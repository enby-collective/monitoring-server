server {
    include ssl_server.conf;

    location /loki/api/v1/push {
      auth_basic "loki";
      auth_basic_user_file /etc/nginx/conf.d/proxies/loki.htpasswd;
      proxy_pass http://127.0.0.1:3100/loki/api/v1/push;
    }
    location /loki/api/v1/status/buildinfo {
      proxy_pass http://127.0.0.1:3100/loki/api/v1/status/buildinfo;
    }
}